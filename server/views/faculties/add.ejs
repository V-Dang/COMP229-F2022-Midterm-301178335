<%- include ('../partials/header.ejs') %>

<!-- Content  for the add page -->
<div class="container">
    <div class="row">
      <div class="offset-md-3 col-md-6">
        <h1><%=title %></h1>
  
        <form class="form" method="post">
          <div class="from-group">
            <label for="nameTextField">Name</label>
            <input
              type="text"
              class="form-control"
              id="nameTextField"
              placeholder="Enter Name"
              name="Facultyname"
              required
            />
          </div>
  
          <div class="from-group">
            <label for="departmentTextField">Department</label>
            <input
              type="text"
              class="form-control"
              id="authorTextField"
              placeholder="Enter Department"
              name="Department"
              required
            />
          </div>
  
          <div class="from-group">
            <label for="subjectTextField">Subject</label>
            <input
              type="text"
              class="form-control"
              id="subjectTextField"
              placeholder="Enter Subject"
              name="Subject"
              required
            />
          </div>
  
          <button class="btn btn-primary" type="submit">
            <i class="fas fa-edit"></i>Submit
          </button>
  
          <a href="/faculties-list" class="btn btn-warning">
            <i class="fas fa-undo"></i>Cancel
          </a>
        </form>
      </div>
    </div>
  </div>

<%- include ('../partials/footer.ejs') %>